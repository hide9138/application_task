<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<!--name表示の追加-->
<div class="field">
    <p>名前</p>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
</div>
<!--name表示の追加-->

<div class="field">
    <p>メールアドレス</p>
    <%= f.email_field :email, autofocus: true, autocomplete:  "email" %>
</div>

<h4>Your address</h4>

<p>郵便番号</p>
<%= f.text_field :postcode,id: "user_postcode" %>
<p>都道府県</p>
<%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name , include_blank: '都道府県',id: "user_prefecture_code" %><br>
<p>市町村</p>
<%= f.text_field :address_city,id: "user_address_city" %>
<p>番地</p>
<%= f.text_field :address_street , id: "user_address_street"%>
<p>マンション名</p>
<%= f.text_field :address_building %>


<br><br><br>
<div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
</div>

<!--パスワード確認入力フォーム-->
<div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
</div>

<div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
</div>
<% end %>

<%= render "devise/shared/links" %>